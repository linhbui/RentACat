
<div class="col-md-4 col-md-offset-4">
<h1 class="text-center">Make a request!</h1>

<%= render 'shared/error' %>


<form action="<%= cat_rental_requests_url %>" method="POST">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  
  <label for="cat_rental_request_cat_id">Cat</label>
  <select id="cat_rental_request_cat_id" name="cat_rental_request[cat_id]" class="form-control">
    <option></option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"
        <%= "selected" if @cat_rental_request.cat_id == cat.id %>
        ><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  
  <label for="cat_rental_request_start_date">Start Date</label>
  <% today = Date.today%>
  <input type="date"
         name="cat_rental_request[start_date]"
         value="<%= @cat_rental_request.start_date %>"
         min='<%= "#{today.year}-#{today.month}-#{today.day}" %>'
         id="cat_rental_request_start_date"
         class="form-control" >
  <br>
  
  <label for="cat_rental_request_end_date">End Date</label>
  <% today = Date.today%>
  <input type="date"
         name="cat_rental_request[end_date]"
         value="<%= @cat_rental_request.end_date %>"
         min='<%= "#{today.year}-#{today.month}-#{today.day}" %>' 
         id="cat_rental_request_end_date" 
         class="form-control">
  <br>
  
  <button type="submit" class="btn btn-primary btn-lg col-md-offset-3">Make the request!</button>
</form>
</div>